<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Routini.MAUI.Pages.PlayRoutineView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Play Routine">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="{Binding Name}" />
        </VerticalStackLayout>
        <Button Command="{Binding StartRoutineCommand}" Text="Start" />
        <Label Text="{Binding CurrentStepName}" />
        <Label Text="{Binding CurrentStepSecondsRemaining}" />
    </VerticalStackLayout>
</ContentPage>