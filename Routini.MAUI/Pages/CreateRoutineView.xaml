<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Routini.MAUI.Pages.CreateRoutineView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Create Routine"
    OnAppearingCommand="{Binding ResetFormCommand}">
    <VerticalStackLayout>
        <Label Text="Create Routine" />
        <VerticalStackLayout>
            <VerticalStackLayout>
                <Label Text="Name" />
                <Entry Text="{Binding Name}" />
            </VerticalStackLayout>
            <VerticalStackLayout>
                <Label Text="Steps" />
                <Button Command="{Binding AddRoutineStepCommand}" Text="Add Step" />
                <CollectionView ItemsSource="{Binding RoutineSteps}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout>
                                <Entry Text="{Binding Name}" />
                                <Entry Text="{Binding DurationSeconds}" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
            <Button Command="{Binding CreateRoutineCommand}" Text="Create" />
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>