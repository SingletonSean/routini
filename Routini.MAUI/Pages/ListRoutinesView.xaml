<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Routini.MAUI.Pages.ListRoutinesView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Your Routines"
    OnAppearingCommand="{Binding LoadRoutinesCommand}">
    <VerticalStackLayout>
        <VerticalStackLayout>
            <Label Text="Your Routines" />
            <Button Command="{Binding NavigateCreateRoutineCommand}" Text="Create Routine" />
        </VerticalStackLayout>
        <CollectionView ItemsSource="{Binding RoutinePreviews}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <VerticalStackLayout>
                            <Label Text="{Binding Name}" />
                            <Label Text="{Binding StepsCount}" />
                        </VerticalStackLayout>
                        <VerticalStackLayout>
                            <Button Command="{Binding NavigateRoutinePlayCommand}" Text="Play" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>