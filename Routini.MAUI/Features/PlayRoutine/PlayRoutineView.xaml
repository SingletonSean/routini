<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Routini.MAUI.Features.PlayRoutine.PlayRoutineView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <VerticalStackLayout>
        <Button Command="{Binding StartRoutineCommand}" Text="Start" />
        <Button Command="{Binding PauseRoutineCommand}" Text="Pause" />
        <Button Command="{Binding ResumeRoutineCommand}" Text="Resume" />
        <Button Command="{Binding CancelRoutineCommand}" Text="Cancel" />

        <Label Text="{Binding CurrentStepName}" />
        <Label Text="{Binding CurrentStepSecondsRemaining}" />
    </VerticalStackLayout>
</ContentView>
